#!/bin/sh

set -e

if [ "$1" = "configure" ]
then
	if [ -n "$2" ] && dpkg --compare-versions "$2" lt 0.4-1
	then
		rm -f /etc/network/if-pre-up.d/rdiscd /etc/network/if-post-down.d/rdiscd
	fi

	if [ ! -e /etc/rdiscd.key ]
	then
		rdiscd-keygen /etc/rdiscd.key
	fi

	getent passwd rdiscd >/dev/null || \
		adduser --quiet --system --home /nonexistent --no-create-home rdiscd
fi

#DEBHELPER#

exit 0;
